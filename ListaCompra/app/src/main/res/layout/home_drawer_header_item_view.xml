<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/home_drawer_item_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<TextView
		android:id="@+id/home_drawer_header_item_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:padding="20dp"
		android:text="@string/lists_title"
		android:textAllCaps="true"
		android:textColor="@color/cool_white"
		android:textSize="18sp"
		app:layout_marginEndPercent="3%" />
	<View
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:layout_below="@+id/home_drawer_header_item_description"
		android:background="@color/cool_white" />
</android.support.percent.PercentRelativeLayout>