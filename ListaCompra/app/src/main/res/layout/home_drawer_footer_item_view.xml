<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<View
		android:id="@+id/home_drawer_footer_separator_view"
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:background="@color/cool_white" />
	<android.support.percent.PercentRelativeLayout
		android:id="@+id/home_drawer_footer_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_below="@+id/home_drawer_footer_separator_view"
		android:layout_margin="10dp"
		android:background="@drawable/button_drawable"
		android:gravity="center"
		android:padding="15dp">
		<TextView
			android:id="@+id/home_drawer_item_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingEnd="8dp"
			android:text="@string/add_collection"
			android:textAllCaps="true"
			android:textColor="@color/cool_white"
			app:layout_marginEndPercent="3%" />
		<ImageView
			android:id="@+id/home_drawer_footer_item_imageview"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_toEndOf="@+id/home_drawer_item_description"
			android:src="@drawable/ico_add" />
	</android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>