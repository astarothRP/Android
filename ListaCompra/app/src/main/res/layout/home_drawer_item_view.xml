<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/home_drawer_item_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:layout_gravity="center"
	android:padding="15dp">
	<ImageView
		android:id="@+id/home_drawer_item_imageview"
		android:layout_centerVertical="true"
		android:layout_width="40dp"
		android:layout_height="40dp" />
	<TextView
		android:id="@+id/home_drawer_item_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="10dp"
		android:layout_toEndOf="@+id/home_drawer_item_imageview"
		android:textAllCaps="true"
		android:textColor="@color/cool_white"
		tools:text="LIST 1" />

</RelativeLayout>